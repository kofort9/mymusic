// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Track {
  id              String   @id @default(uuid())
  spotifyId       String   @unique
  title           String
  artist          String
  album           String
  camelotKey      String
  key             Int
  mode            Int
  bpm             Float
  energy          Float
  valence         Float
  danceability    Float
  acousticness    Float
  instrumentalness Float
  liveness        Float
  speechiness     Float
  durationMs      Int
  timeSignature   Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
